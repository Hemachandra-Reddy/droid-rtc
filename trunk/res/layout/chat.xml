<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/headerID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/GRAY_LiGHT" >
        <ImageView 
            android:id="@+id/logoID"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/people" />

        <TextView
            android:id="@+id/nameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/logoID"
            android:text="Chakri"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/presenceID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_status_mode"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/ic_status" />
    </RelativeLayout>

    <ListView
        android:id="@+id/chatListId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/form"
        android:layout_below="@+id/headerID"
        android:divider="@null"
        android:transcriptMode="alwaysScroll" >

    </ListView>

    <LinearLayout
        android:id="@+id/form"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle_corner"
        android:orientation="horizontal"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:gravity="center"
            android:padding="10dip" >

            <EditText
                android:id="@+id/sendTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:ems="10"
                android:hint="Type Here"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:scrollbars="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="30"
            android:gravity="center"
            android:paddingLeft="5dip" >

            <Button
                android:id="@+id/sendBtnID"
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:background="@drawable/rounded_corner"
                android:enabled="false"
                android:text="Send" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>